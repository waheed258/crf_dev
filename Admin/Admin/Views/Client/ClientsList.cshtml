@{
    ViewBag.Title = "ClientsList";
}

<script src="@Url.Content("~/Scripts/angular.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngApp/ngApp.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngControllers/ngNewClientController.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngService/ngCrudService.js")" type="text/javascript"></script>

<div class="content-wrapper" ng-app="myapp" ng-controller="newClientController">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="header-icon">
            <i class="fa fa-users"></i>
        </div>
        <div class="header-title">
            <h1>Client</h1>
            <small>Client List</small>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-bd lobidrag">
                    <div class="panel-heading">
                        <div class="btn-group" id="buttonexport">
                            <a href="#">
                                <h4>All Client</h4>
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <!-- Plugin content:powerpoint,txt,pdf,png,word,xl -->
                        @*<div class="btn-group">
                                <div class="buttonexport" id="buttonlist">
                                    <a class="btn btn-add" href="add-customer.html">
                                        <i class="fa fa-plus"></i> Add Client
                                    </a>
                                </div>
                                <button class="btn btn-exp btn-sm dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i> Export Table Data</button>
                                <ul class="dropdown-menu exp-drop" role="menu">
                                    <li>
                                        <a href="#" onclick="$('#dataTableExample1').tableExport({type:'pdf',pdfFontSize:'7',escape:'false'});">
                                            <img src="assets/dist/img/pdf.png" width="24" alt="logo"> PDF
                                        </a>
                                    </li>
                                </ul>
                            </div>*@
                        <!-- Plugin content:powerpoint,txt,pdf,png,word,xl -->
                        <div class="table-responsive">
                            <table id="dataTableExample1" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr class="info">
                                        <th>ClientID</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>SAId</th>
                                        <th>Mobile</th>
                                        <th>EmailId</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="client in ClientList">
                                        <td>{{client.ClientID}}</td>
                                        <td>{{client.FirstName}}</td>
                                        <td>{{client.LastName}}</td>
                                        <td>{{client.SAId}}</td>
                                        <td>{{client.Mobile}}</td>
                                        <td>{{client.EmailId}}</td>
                                        <td>{{client.Status}}</td>
                                        <td>
                                            <button type="button" class="btn btn-add btn-sm" data-toggle="modal" title="Edit" data-target="#Edit" ng-click="GetDetails(client)"><i class="fa fa-pencil"></i></button>
                                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" title="Delete" data-target="#Delete" ng-click="GetDetails(client)"><i class="fa fa-trash-o"></i> </button>
                                            <button type="button" class="btn btn-add btn-sm" data-toggle="modal" title="Validate" data-target="#Validate" ng-click="GetByName(client)"><i class="fa fa-user"></i></button>
                                            <button type="button" class="btn btn-add btn-sm" data-toggle="modal" data-target="#AdvisorFeedback" title="Advisor Feedback" ng-click="GetDetails(client)"><i class="fa fa-comments"></i></button>
                                            <button type="button" class="btn btn-add btn-sm" data-toggle="modal" data-target="#Status" title="Status" ng-click="GetStatusByID(client)"><i class="fa fa-check"></i></button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- customer Modal1 -->
        <div class="modal fade" id="Edit" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header modal-header-primary">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3><i class="fa fa-user m-r-5"></i> Update Client</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form class="form-horizontal" ng-submit="Update(client)">
                                    <fieldset>
                                        <div class="col-md-12 form-group alert alert-success" ng-show="successMessagebool ">
                                            {{successMessage}}
                                        </div>
                                        <!-- Text input-->
                                        <div class="col-md-4 form-group">
                                            <label>Title</label>
                                            <select class="form-control" ng-model="client.Title" required tabindex="1">
                                                <option value="" selected>Title</option>
                                                <option value="Mr">Mr</option>
                                                <option value="Miss">Miss</option>
                                                <option value="Ms">Ms</option>
                                                <option value="Mrs">Mrs</option>
                                                <option value="Dr">Dr</option>
                                            </select>
                                        </div>
                                        <!-- Text input-->
                                        <div class="col-md-4 form-group">
                                            <label>First Name</label>
                                            <input type="text" class="form-control" placeholder="Enter First Name" required ng-model="client.FirstName" tabindex="2">
                                        </div>
                                        <!-- Text input-->
                                        <div class="col-md-4 form-group">
                                            <label>Last Name</label>
                                            <input type="text" class="form-control" placeholder="Enter last Name" required ng-model="client.LastName" tabindex="3">
                                        </div>
                                        <div class="col-md-4 form-group">
                                            <label>SA ID</label>
                                            <input type="number" class="form-control" placeholder="SA ID" ng-model="client.SAId" required tabindex="4">
                                        </div>
                                        <div class="col-md-4 form-group">
                                            <label>Company</label>
                                            <input type="text" class="form-control" placeholder="Company" ng-model="client.Company" required tabindex="5">
                                        </div>
                                        <div class="col-md-4 form-group">
                                            <label>Company Reg Number</label>
                                            <input type="text" class="form-control" placeholder="Company Registration Number" ng-model="client.CompanyRegNo" required tabindex="6">
                                        </div>
                                        <div class="col-md-4 form-group">
                                            <label>Trust</label>
                                            <input type="text" class="form-control" placeholder="Trust" ng-model="client.Trust" required tabindex="7">
                                        </div>
                                        <div class="col-md-4 form-group">
                                            <label>Trust Reg Number</label>
                                            <input type="text" class="form-control" placeholder="Trust Registration Number" ng-model="client.TrustRegNo" required tabindex="8">
                                        </div>
                                        <div class="col-md-4 form-group">
                                            <label>Mobile</label>
                                            <input type="text" class="form-control" placeholder="Enter Mobile" required ng-model="client.Mobile" tabindex="9">
                                        </div>
                                        <div class="col-md-4 form-group">
                                            <label>Email</label>
                                            <input type="email" class="form-control" placeholder="Enter Email" required ng-model="client.EmailId" tabindex="10">
                                        </div>
                                        <div class="col-md-12 form-group user-form-group">
                                            <div class="pull-right">
                                                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-add btn-sm">Save</button>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger pull-left" data-dismiss="modal" ng-click="close()">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
        <!-- Modal -->
        <!-- Customer Modal2 -->
        <div class="modal fade" id="Delete" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header modal-header-primary">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3><i class="fa fa-user m-r-5"></i> Delete Customer</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form class="form-horizontal" ng-submit="Update(client)">
                                    <fieldset>
                                        <div class="col-md-12 form-group user-form-group">
                                            <label class="control-label">Are you sure want to delete the Client?</label>
                                            @*<input type="text" class="form-control" ng-model="client.FirstName" readonly>*@
                                            <div class="pull-right">
                                                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">NO</button>
                                                <button type="submit" class="btn btn-add btn-sm">YES</button>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
        <div class="modal fade" id="Validate" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header modal-header-primary">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3><i class="fa fa-user m-r-5"></i>Validate Customer</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form class="form-horizontal" ng-submit="Update(client)">
                                    <fieldset>
                                        <div class="col-md-12 form-group user-form-group">
                                            <div class="col-md-5">
                                                <label>Approved By</label>
                                                <select class="form-control" ng-model="client.AdvisorId">
                                                    <option value="" selected>Choose Advisor</option>
                                                    <option ng-repeat="Advisor in Advisors" ng-selected="Advisor.AdvisorId === selectedOption"
                                                            value="{{Advisor.AdvisorId}}">
                                                        {{Advisor.FirstName}}
                                                    </option>
                                                </select>
                                            </div>
                                            <div class="col-md-5">
                                                <label>Verified On</label>
                                                <input type="date" class="form-control" ng-model="client.VerifiedOn" value="" placeholder=" enter date...">
                                            </div>

                                        </div>
                                        <div class="col-md-12 form-group user-form-group">
                                            <div class="col-md-10">
                                                <label>Advisor Feedback</label>
                                                <textarea class="form-control" rows="3" ng-model="client.AdvisorFeedback"></textarea>
                                            </div>

                                        </div>
                                        <div class="col-md-12 form-group user-form-group">
                                            <div class="col-md-4"><label>VerifiedThrough</label></div>

                                            <div class="col-md-5">
                                                <select class="form-control" ng-model="client.VerifiedThrough">
                                                    <option value="" selected>VerifiedThrough</option>
                                                    <option value="Phone">Phone</option>
                                                    <option value="Email">Email</option>
                                                </select>
                                            </div>

                                        </div>
                                        <div class="pull-left col-md-9">
                                            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-add btn-sm">Save</button>
                                        </div>


                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- Modal -->
        <!-- /.modal -->
        <!-- /.modal -->
        <!-- /.modal -->
        <div class="modal fade" id="AdvisorFeedback" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header modal-header-primary">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3><i class="fa fa-user m-r-5"></i>Advisor Feedback</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form class="form-horizontal" ng-submit="Update(client)">
                                    <fieldset>
                                        <div class="col-md-12 form-group user-form-group">
                                            <div class="col-md-7">
                                                <label>Advisor Feedback</label>
                                                <textarea class="form-control" rows="3" ng-model="client.AdvisorFeedback" required></textarea>
                                            </div>
                                            <div class="pull-right">
                                                <button type="button" class="btn btn-danger btn-sm">Clear</button>
                                                <button type="submit" class="btn btn-add btn-sm">Save</button>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
        <div class="modal fade" id="Status" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header modal-header-primary">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3><i class="fa fa-user m-r-5"></i>Status</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form class="form-horizontal" ng-submit="Update(client)">
                                    <fieldset>
                                        <div class="col-md-12 form-group user-form-group">
                                            <div class="col-md-4">
                                                <select class="form-control" ng-model="client.StatusID">
                                                    <option value="" selected>Choose Status</option>
                                                    <option ng-repeat="Status in Statues" ng-selected="Status.StatusID === selectedStatus"
                                                            value="{{Status.StatusID}}">
                                                        {{Status.Status}}
                                                    </option>
                                                </select>

                                            </div>
                                            @*<input type="text" class="form-control" ng-model="client.FirstName" readonly>*@
                                            <div class="pull-right">
                                                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-add btn-sm">YES</button>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </section>
    <!-- /.content -->
</div>