
@{
    ViewBag.Title = "UsersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/angular.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngApp/ngApp.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngControllers/ngNewUserController.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngService/ngCrudService.js")" type="text/javascript"></script>

<body class="horizontal-fixed" ng-app="myapp" ng-controller="newUserController">

    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-header">
            </div>
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">

                        <!-- Default ordering table start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>User List</h5>
                                <span></span>
                                <div class="card-header-right">
                                    <i class="icofont icofont-rounded-down"></i>
                                    <i class="icofont icofont-refresh"></i>
                                    <i class="icofont icofont-close-circled"></i>
                                </div>
                            </div>
                            <div class="card-block">
                                <div class="dt-responsive table-responsive">
                                    <table id="order-table" class="table table-striped table-bordered nowrap">

                                        <tr>
                                            <td>Id</td>
                                            <td>First Name</td>
                                            <td>Last Name</td>
                                            <td>Mobile Number</td>
                                            <td>Phone Number</td>
                                            <td>Email</td>
                                        </tr>

                                        <tr ng-repeat="user in UserList">
                                            <td>{{user.UserID}}</td>
                                            <td>{{user.FirstName}}</td>
                                            <td>{{user.LastName}}</td>
                                            <td>{{user.MobileNumber}}</td>
                                            <td>{{user.PhoneNumber}}</td>
                                            <td>{{user.EmailId}}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>

        </div>
    </div>


</body>