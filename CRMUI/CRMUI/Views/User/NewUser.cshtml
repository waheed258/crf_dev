
@{
    ViewBag.Title = "NewUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NewUser</h2>

<script src="@Url.Content("~/Scripts/angular.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngApp/ngApp.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngService/ngCrudService.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngControllers/ngNewUserController.js")" type="text/javascript"></script>

<h2>ClientReg</h2>
<div class="main-body" ng-app="myapp" ng-controller="newUserController">
    <div class="page-wrapper" style="padding:0rem">
        <div class="page-header">


        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h5>New User</h5>
            @*<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>*@
            <div class="card-header-right">
                <i class="icofont icofont-rounded-down"></i>
                <i class="icofont icofont-refresh"></i>
                <i class="icofont icofont-close-circled"></i>
            </div>
        </div>
        <div class="card-block">
            @*<form id="main" method="post" action="/" novalidate>*@

            <div class="form-group row">
               
                <div class="col-sm-2">
                   
                    <select ng-model="UserType" class="form-control" id="UserType">
                        <option value="" selected>Choose User Type</option>
                        <option ng-repeat="UserType in UserTypes"
                                value="{{UserType.UserTypeId}}">
                            {{UserType.UserType}}
                        </option>
                    </select>

                    <span class="messages"></span>
                </div>
              
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="LoginId" name="LoginId" placeholder="Login Id" ng-model="LoginId">
                    <span class="messages"></span>
                </div>
                
                <div class="col-sm-2">
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" ng-model="Password">
                    <span class="messages"></span>
                </div>

                <div class="col-sm-2">
                    <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="First Name" ng-model="FirstName">
                    <span class="messages"></span>
                </div>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="LastName" name="LastName" placeholder="LastName" ng-model="LastName">
                    <span class="messages"></span>
                </div>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="MobileNumber" name="MobileNumber" placeholder="Mobile Number" ng-model="MobileNumber">
                    <span class="messages"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="Phone Number" ng-model="PhoneNumber">
                    <span class="messages"></span>
                </div>
                <div class="col-sm-2">
                    <input type="email" class="form-control" id="EmailId" name="EmailId" placeholder="EmailId" ng-model="EmailId">
                    <span class="messages"></span>
                </div>
                <div class="col-sm-2">
                    <select ng-model="ActiveStatus" class="form-control" id="ActiveStatus">
                        <option value="" selected>Choose User Status</option>
                        <option ng-repeat="ActiveStatus in ActiveStatues"
                                value="{{ActiveStatus.StatusID}}">
                            {{ActiveStatus.Status}}
                        </option>
                    </select>
                    <span class="messages"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary m-b-0" ng-click="Save()">Submit</button>
                </div>
            </div>
            @*</form>*@
        </div>
    </div>
</div>