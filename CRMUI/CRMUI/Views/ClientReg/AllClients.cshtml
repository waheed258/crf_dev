@{
    ViewBag.Title = "AllClients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/angular.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngApp/ngApp.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngControllers/ngNewClientController.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngService/ngCrudService.js")" type="text/javascript"></script>

<h2>AllClients</h2>
<body class="horizontal-fixed" ng-app="myapp" ng-controller="newClientController">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-header">
            </div>
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Default ordering table start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Client List</h5>
                                <span></span>
                                <div class="card-header-right">
                                    <i class="icofont icofont-rounded-down"></i>
                                    <i class="icofont icofont-refresh"></i>
                                    <i class="icofont icofont-close-circled"></i>
                                </div>
                            </div>
                            <div class="card-block">
                                <div class="dt-responsive table-responsive">
                                    <table id="order-table" class="table table-striped table-bordered nowrap">
                                        <tr>
                                            <td>ClientID</td>
                                            <td>Title</td>
                                            <td>First Name</td>
                                            <td>Last Name</td>
                                            <td>SAId</td>
                                            <td>Company</td>
                                            <td>CompanyRegNo</td>
                                            <td>Mobile</td>
                                            <td>EmailId</td>
                                        </tr>
                                        <tr ng-repeat="client in ClientList">
                                            <td>{{client.ClientID}}</td>
                                            <td>{{client.Title}}</td>
                                            <td>{{client.FirstName}}</td>
                                            <td>{{client.LastName}}</td>
                                            <td>{{client.SAId}}</td>
                                            <td>{{client.Company}}</td>
                                            <td>{{client.CompanyRegNo}}</td>
                                            <td>{{client.Mobile}}</td>
                                            <td>{{client.EmailId}}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

