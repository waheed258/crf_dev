@{
    ViewBag.Title = "NewClient";
}

<script src="@Url.Content("~/Scripts/angular.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngApp/ngApp.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngService/ngCrudService.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngControllers/ngNewClientController.js")" type="text/javascript"></script>

<div class="content-wrapper" ng-controller="ClientController" ng-app="myapp">
    <form name="clientForm" ng-submit="Save()">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="header-icon">
                <i class="fa fa-users"></i>
            </div>
            <div class="header-title">
                <h1>Client Registration</h1>
                <small></small>
            </div>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- Form controls -->
                <div class="col-sm-12">
                    <div class="panel panel-bd lobidrag">
                        <div class="panel-body">
                            <div class="col-md-12 form-group alert alert-success" ng-show="successMessagebool ">
                                {{successMessage}}
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Title</label>
                                    <select class="form-control" ng-model="Title" required tabindex="1" ng-change="onChange()">
                                        <option value="" selected>Title</option>
                                        <option value="Mr">Mr</option>
                                        <option value="Miss">Miss</option>
                                        <option value="Ms">Ms</option>
                                        <option value="Mrs">Mrs</option>
                                        <option value="Dr">Dr</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Company</label>
                                    <input type="text" class="form-control" placeholder="Company" ng-model="Company" required tabindex="5">
                                </div>    
                                <div class="form-group">
                                    <label>Mobile</label>
                                    <input type="number" class="form-control" placeholder="Enter Mobile" required ng-model="Mobile" tabindex="9">
                                </div>  
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-rounded w-md m-b-5">Save</button>
                                    <button type="button" class="btn btn-danger btn-rounded w-md m-b-5" ng-click="Cancel()">Cancel</button>
                                </div>                         
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" class="form-control" placeholder="Enter First Name" required ng-model="FirstName" tabindex="2">
                                </div>
                                <div class="form-group">
                                    <label>Company Registration Number</label>
                                    <input type="number" class="form-control" placeholder="Company Registration Number" ng-model="CompanyRegNo" required tabindex="6">
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" placeholder="Enter Email" required ng-model="EmailId" tabindex="10">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    <input type="text" class="form-control" placeholder="Enter last Name" required ng-model="LastName" tabindex="3">
                                </div>
                                <div class="form-group">
                                    <label>Trust</label>
                                    <input type="text" class="form-control" placeholder="Trust" ng-model="Trust" required tabindex="7">
                                </div>                     
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>SA ID</label>
                                    <input type="number" class="form-control" placeholder="SA ID" ng-model="SAId" required tabindex="4" maxlength="15">
                                </div>
                                <div class="form-group">
                                    <label>Trust Registration Number</label>
                                    <input type="number" class="form-control" placeholder="Trust Registration Number" ng-model="TrustRegNo" required tabindex="8">
                                </div>
                            </div>
                            <div class="col-sm-3">
                               
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </form>

</div>



