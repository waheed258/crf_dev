@{
    ViewBag.Title = "Home Page";
}
<script src="@Url.Content("~/Scripts/angular.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngApp/ngApp.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngService/ngCrudService.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ng/ngControllers/ngNewUserController.js")" type="text/javascript"></script>


<div class="content-wrapper" ng-controller="ConsultantController" ng-app="myapp">
    <form name="userForm" ng-submit="Save()">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="header-icon">
                <i class="fa fa-users"></i>
            </div>
            <div class="header-title">
                <h1>Add User</h1>
                <small></small>
            </div>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- Form controls -->
                <div class="col-sm-12">
                    <div class="panel panel-bd lobidrag">
                        <div class="panel-body">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" class="form-control" placeholder="Enter First Name" required ng-model="FirstName" tabindex="1">
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" placeholder="Enter Email" required ng-model="EmailId" tabindex="5">
                                </div>
                                <div class="form-group">
                                    <label>Designation</label>
                                    <select class="form-control" ng-model="Designation" required tabindex="9">
                                        <option value="" selected>Choose Designation</option>
                                        <option ng-repeat="Designation in Designations"
                                                value="{{Designation.DesignationId}}">
                                            {{Designation.Designation}}
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    <input type="text" class="form-control" placeholder="Enter last Name" required ng-model="LastName" tabindex="2">
                                </div>
                                <div class="form-group">
                                    <label>Login ID</label>
                                    <input type="text" class="form-control" placeholder="Login ID" ng-model="LoginId" required tabindex="6">
                                </div>
                                <div class="form-group">
                                    <label>Branch</label>
                                    <select class="form-control" ng-model="Branch" required tabindex="10">
                                        <option value="" selected>Choose Branch</option>
                                        <option ng-repeat="Branch in Branchs"
                                                value="{{Branch.BranchId}}">
                                            {{Branch.BranchName}}
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Mobile</label>
                                    <input type="number" class="form-control" placeholder="Enter Mobile" required ng-model="MobileNumber" tabindex="3">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control" placeholder="Password" required id="password" ng-model="Password" tabindex="7">
                                </div>
                                <div class="form-group">
                                    <label>User Type</label>
                                    <select class="form-control" ng-model="ConsultantType" required tabindex="11">
                                        <option value="" selected>Choose Consultant Type</option>
                                        <option ng-repeat="ConsultantType in ConsultantTypes"
                                                value="{{ConsultantType.UserTypeId}}">
                                            {{ConsultantType.UserType}}
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="number" class="form-control" placeholder="Enter Phone" required ng-model="PhoneNumber" tabindex="4">
                                </div>
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <input type="password" class="form-control" placeholder="Confirm Password" required id="confirm_password" ng-model="ConfirmPassword" tabindex="8">
                                </div>
                                <div class="form-group">
                                    <label>Status</label>
                                    <select class="form-control" ng-model="Status" required tabindex="12">
                                        <option value="" selected>Choose User Status</option>
                                        <option ng-repeat="Status in Statues"
                                                value="{{Status.StatusID}}">
                                            {{Status.Status}}
                                        </option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <button type="submit" class="btn btn-primary btn-rounded w-md m-b-5">Save</button>
                                <button type="button" class="btn btn-danger btn-rounded w-md m-b-5">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </form>

</div>
<script type="text/javascript">
    var password = document.getElementById("password")
  , confirm_password = document.getElementById("confirm_password");

    function validatePassword() {
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Password should match with this field");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;
</script>
